{
    "dataset_reader": {
        "type": "uds_srl_reader",
        "lazy": false
    },
    "model": {
        "type": "srl_lstm",
        "embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 50,
                    "pretrained_file": "(http://nlp.stanford.edu/data/glove.6B.zip)#glove.6B.50d.txt",
                    "trainable": false
                }
            }
        },
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "hidden_size": 25,
            "input_size": 50
        }
    },
    "train_data_path": "data/experiencer/train.json",
    "validation_data_path": "data/experiencer/dev.json",
    "trainer": {
        "cuda_device": 0,
        "grad_clipping": 5,
        "num_epochs": 10,
        "optimizer": {
            "type": "adam",
            "lr": 0.003
        },
        "patience": 3,
        "validation_metric": "-loss"
    },
    "data_loader": {
        "batch_sampler": {
            "type": "bucket",
            "batch_size": 10
        }
    }
}